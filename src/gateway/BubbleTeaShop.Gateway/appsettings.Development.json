          }
        ]
      }
    },
    "Clusters": {
      "cart-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://cart-api"
          }
        }
      },
      "catalog-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://catalog-api"
          }
        }
      },
      "ordering-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://ordering-api"
          }
        }
      },
      "payment-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://payment-api"
          }
        }
      }
    }
  }
}
